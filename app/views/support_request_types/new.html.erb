<% if @support_request_type.errors.any? %>
  <%= render 'devise/shared/error_messages', resource: @support_request_type %>
<% end %>

<%= form_for @support_request_type do |form| %>
  <h1 class="h3 mb-4 text-gray-800 mt-5 ml-5">Support Request Type</h1>
  <div class="form-group col-md-6 p-0 ml-5">
    <%= form.text_field :name, class:"form-control", placeholder:"Create Support Requset Type" %>
  </div>
  <%= form.submit "Create", class: "ml-5 btn btn-primary" %>
<% end %>


<%= render "support_req_type" %>