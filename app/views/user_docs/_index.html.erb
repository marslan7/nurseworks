
<div class="table-responsive">
  <table class="table table-bordered table-hover">

  <thead>
    <tr>
      <th><%= link_to "Document#", :order_by => "id", :dir => @dir %></th>
      <th><%= link_to "Document", :order_by => "doc_type", :dir => @dir %></th>
      <th class="d-none d-sm-table-cell">Attachment</th>
      <th>User</th>
      <th class="d-none d-sm-table-cell"><%= link_to "Updated", :order_by => "Updated_at", :dir => @dir %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user_docs.each do |user_doc| %>
      <tr>
        <td><%= user_doc.id %></td>
        <td><%= link_to user_doc.document_type.name, user_doc %></td>
        <td class="d-none d-sm-table-cell"><%= link_to "Download", rails_blob_url(user_doc.attachment, disposition: "attachment") if user_doc.attachment.attached? %></td>
        <td><%= user_doc.user.full_name %></td>
        <td class="d-none d-sm-table-cell"><%= user_doc.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= link_to 'Edit', edit_user_doc_path(user_doc), class: "btn btn-primary btn-sm" %>
          <%= link_to 'Delete', user_doc, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

